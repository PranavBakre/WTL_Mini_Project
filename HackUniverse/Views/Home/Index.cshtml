@model IEnumerable<Hackathon>
@{
    ViewData["Title"] = "Home Page";
}

<div>
    <!--<h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>-->
    
        
        <h6>Current Hackathons</h6>
        <div class="card-columns">
            @{
                int counter = 0;
                @foreach (var item in Model)
                {
                    if (item.StartDate.Date.CompareTo(DateTime.Today.Date) == 0)
                    {
                        counter++;
                        <a asp-controller="Hackathon" asp-action="Index" asp-route-hid="@item.Id">
                            <div class="card" style="max-height: 5em;">
                                <div class="card-body">

                                    <h5 class="card-title">@item.Title</h5>
                                </div>

                            </div>
                        </a>
                    }

                }
                if (counter == 0)
                {
                    <div>No Hackathons Today</div>
                }
            }
        </div>
</div>
    <h6>Previous Hackathons</h6>
    <div class="card-columns">
        @foreach (var item in Model)
        {
            if (item.StartDate.Date.CompareTo(DateTime.Today.Date) < 0)
            {
                <a  asp-controller="Hackathon" asp-action="Index" asp-route-hid="@item.Id"  >

                <div class="card" style="max-height: 5em;">
                    <div class="card-body">

                        <h5 class="card-title">@item.Title</h5>
                    </div>

                </div>
            </a>
            }
        }
    </div>

    <h6>Next Hackathons</h6>
    <div class="card-columns">
        @foreach (var item in Model)
        {
            if (item.StartDate.Date.CompareTo(DateTime.Today.Date) > 0)
            {
                <a asp-controller="Hackathon" asp-action="Index" asp-route-hid="@item.Id">
                <div class="card" style="height: 6em;">
                    <div class="card-body">

                        <h5 class="card-title">@item.Title</h5>
                    </div>

                </div>
        </a>
        }
    }
</div>
