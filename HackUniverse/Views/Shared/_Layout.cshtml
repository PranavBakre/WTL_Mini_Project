<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - HackUniverse</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="~/Images/HackUniverse.png" />
                </a>
                <button class="navbar-toggler" type="button" data-toggle="collapse"
                        data-target="#HeaderMain" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon" />
                </button>
                <div id="HeaderMain" class="navbar-collapse collapse d-sm-inline-flex">
                    <ul class="navbar-nav navbar-toggleable-sm flex-grow-1">

                        <li id="Search" class="nav-item my-auto navbar-collapse collapse" style="width:75%">
                            <form style="width:100%;display:flex;box-shadow:0 0 10px;
                                  border-radius:30px;" asp-area=""
                                  asp-controller="Home" asp-action="Search" method="get">
                                <input name="S" type="text" style="border:none;
                                                          border-bottom-left-radius:30px;
                                                          border-top-left-radius:30px;
                                                          width:90%;
                                                          padding-left:2em;
                                                          outline:none;" />
                                <button type="submit" style="border:none;
                                                          border-bottom-right-radius:30px;
                                                          border-top-right-radius:30px;
                                                          width:10%;
                                                          color:cadetblue;
                                                          background-color:lightgoldenrodyellow;
                                                          outline:none">
                                    Go
                                </button>
                            </form>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area=""
                               asp-controller="Home" asp-action="Login">Login</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area=""
                               asp-controller="Home" asp-action="Register">Register</a>
                        </li>

                        <li class="nav-item">
                            <a class="my-auto nav-link text-dark navbar-toggler"
                               data-toggle="collapse" data-target="#Search"
                               aria-expanded="false" style="border:none; font-size:14px;
                                                            padding-left:0;padding-top:7px;
                                                            padding-bottom:7px;height:35px">
                                Search
                            </a>
                        </li>
                        



                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2019 - HackUniverse - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
